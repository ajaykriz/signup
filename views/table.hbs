<section>
    <div class="container">
<table class="table mt-5 bg-white">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>

  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{this.no}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width:50px; height:50px;" src="{{this.Image}}"</td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</section>